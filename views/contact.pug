extends layouts/layout.pug

block content

    div.grid.grid-cols-2.gap-8

        div.p-6.ml-4

            p I'd love to hear from you
            p.mb-12 Fill up the form and I will get back to you.

            table
                tbody
                    tr
                        td.pl-0.pr-8.pt-8.pb-6
                            i.fa.fa-phone.fa-lg
                        td 000 - 00 - 000 0000

                    tr
                        td.pl-0.pr-8.pt-8.pb-6
                            i.fa.fa-envelope.fa-lg
                        td YourEmail@Domain.Com

                    tr
                        td.pl-0.pr-8.pt-8.pb-6
                            i.fa.fa-map-marker.fa-lg
                        td City, Country

            ul.flex.items-center.mt-8
                li
                    a.p-4(href="https://twitter.com")
                        i.fa.fa-twitter.fa-lg

                li
                    a.p-4(href="http://facebook.com")
                        i.fa.fa-facebook.fa-lg

                li
                    a.p-4(href="https://linkedin.com")
                        i.fa.fa-linkedin.fa-lg

        div.p-6.ml-4.mr-4
            div
                form(class="mb-6")

                    div.flex.flex-col.mb-4
                        label.mb-2.mr-2.uppercase.text-lg.text-grey-darkest Name
                        input(type="text" name="name" class="border py-2 px-3 text-grey-darkest")

                    div.flex.flex-col.mb-4
                        label.mb-2.mr-2.uppercase.text-lg.text-grey-darkest Email
                        input(type="email" name="email" class="border py-2 px-3 text-grey-darkest")

                    div.flex.flex-col.mb-4
                        label.mb-2.mr-2.uppercase.text-lg.text-grey-darkest Message
                        textarea(name="msg", rows="3", cols="20" class="border py-2 px-3 text-grey-darkest")

                    div.flex.flex-col.mb-4
                        input(type="Submit", value="Submit" class="block bg-blue-300 hover:bg-blue-700 uppercase text-md text-white mx-auto p-3 rounded")
